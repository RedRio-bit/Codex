{
  "id": "collection",
  "label": "Collection",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "Slug",
          "placeholder": "codex-collection"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Titolo",
          "placeholder": "Titolo collezione"
        }
      },
      "short_description": {
        "type": "StructuredText",
        "config": {
          "label": "Descrizione breve",
          "single": "paragraph",
          "placeholder": "Riassunto sintetico della collezione"
        }
      },
      "order": {
        "type": "Number",
        "config": {
          "label": "Ordine",
          "placeholder": "1"
        }
      },
      "images": {
        "type": "Group",
        "config": {
          "label": "Immagini",
          "fields": {
            "asset": {
              "type": "Link",
              "config": {
                "label": "Image asset",
                "select": "document",
                "customtypes": [
                  "image_asset"
                ]
              }
            }
          }
        }
      }
    }
  },
  "format": "custom"
}
